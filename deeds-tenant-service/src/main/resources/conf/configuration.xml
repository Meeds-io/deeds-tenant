<configuration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>io.meeds.tenant.configuration.TenantKernelProfileService</type>
    <init-params>
      <values-param>
        <name>profiles</name>
        <description>Profiles to inject into PortalContainer dynamically</description>
        <value>deed-nft-tenant</value>
      </values-param>
    </init-params>
  </component>

  <component>
    <key>DeedTenantProperties</key>
    <type>io.meeds.tenant.configuration.TenantKernelPropertyConfigurator</type>
    <init-params>
      <properties-param>
        <name>DeedTenantProperties</name>
        <description>Deed Tenant Management Features</description>
        <property name="exo.branding.company.name" value="${meeds.tenantManagement.branding.company.name:Web3 Hub}" />
      </properties-param>
    </init-params>
  </component>

</configuration>
